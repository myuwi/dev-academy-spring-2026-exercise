{
  "private": true,
  "workspaces": [
    "apps/*",
    "e2e"
  ],
  "scripts": {
    "preinstall": "bunx --bun only-allow bun",
    "dev": "bun --filter '*' dev",
    "docker": "docker compose up --build --renew-anon-volumes",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build --renew-anon-volumes",
    "lint": "oxlint --type-aware --deny-warnings",
    "format": "oxfmt --check",
    "test": "bun --filter './apps/*' test",
    "test:e2e": "bun --cwd e2e test",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.0"
  }
}
